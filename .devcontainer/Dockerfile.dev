# =============================================================================
# Development Dockerfile - Java 17 + Maven + Chromium + ChromiumDriver
# =============================================================================

FROM maven:3.9-eclipse-temurin-17

# INSTALL CHROMIUM + DRIVER (stable for CI/CD)
RUN apt-get update && apt-get install -y \
    wget \
    gnupg2 \
    ca-certificates \
    unzip \
    curl \
    git \
    chromium \
    chromium-driver \
    && groupadd -r vscode && useradd -r -g vscode -m -s /bin/bash vscode \
    && rm -rf /var/lib/apt/lists/* \
    && echo "Versions install√©es:" \
    && chromium --version \
    && chromedriver --version

# Workspace
WORKDIR /workspace

# Cache Maven
COPY pom.xml .
RUN mvn dependency:go-offline || true

# Permissions
RUN chown -R vscode:vscode /workspace

# User
USER vscode

# Default
CMD ["/bin/bash"]
